<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>

        <!-- the plugin name [A-Za-z_] -->
        <pluginName>PimcoreObjectBridge</pluginName>
        <!--<pluginIcon>/plugins/IboodUI/static/img/icon.png</pluginIcon>-->

        <!-- a short description -->
        <pluginDescription><![CDATA[]]></pluginDescription>

        <!-- meta data -->
        <pluginVersion>0.0.1</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>0</pluginBuildTimestamp>

        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>\ObjectBridge\Plugin</pluginClassName>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/PimcoreObjectBridge/models</path>
            <path>/PimcoreObjectBridge/lib</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>ObjectBridge</namespace>
        </pluginNamespaces>

        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/plugins/PimcoreObjectBridge/static/js/pimcore/objects/tags/objectBridge.js</path>
            <path>/plugins/PimcoreObjectBridge/static/js/pimcore/objects/classes/data/objectBridge.js</path>
        </pluginJsPaths>

        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/plugins/PimcoreObjectBridge/static/css/object-bridge.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>
